@page
@model LoginModel


@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>
<section class="px-4 py-5 my-5">
    <div class="col-md-4 mx-auto" align="center">
    <form id="account" method="post">
        <h2 class="display-6 fw-bold">Ingrese sus datos</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col mb-3">
            <label asp-for="Input.Email" class="form-label" for="validation01" type="text" class="form-control is-valid" id="validation01" required>Correo</label>
            <input asp-for="Input.Email" class="form-control" class="col-md-2" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="col mb-3">
            <label asp-for="Input.Password" class="form-label">Contraseña</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="col-md-5 mb-3" >
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear Usuario</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmacion de email</a>
            </p>
        </div>
    </form>
    </div>
</section>
