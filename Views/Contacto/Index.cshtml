@model ControlWavi.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Contactenos</h1>

    <form asp-controller="Contacto" asp-action="Create">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe su nombre" aria-label=".form-control-sm" />

        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control form-control-sm" type="text" placeholder="Escribe su email" aria-label=".form-control-sm" />

        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control form-control-sm" type="text" placeholder="Escribe el asunto" aria-label=".form-control-sm" />

        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control form-control-sm" type="text" placeholder="Escribe el comentario" aria-label=".form-control-sm" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
